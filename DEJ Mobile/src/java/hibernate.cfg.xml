<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dejmobile?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="ENTITY/Comuna.hbm.xml"/>
    <mapping resource="ENTITY/Cliente.hbm.xml"/>
    <mapping resource="ENTITY/Solicitud.hbm.xml"/>
    <mapping resource="ENTITY/Minuto.hbm.xml"/>
    <mapping resource="ENTITY/CuotaNavegacion.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
